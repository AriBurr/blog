<div class="container">
  <h1>Edit</h1>
  <%= form_for @page do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, required: true, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, required: true, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <br>
  <%= link_to 'Cancel', pages_path, class: 'btn btn-primary' %>
</div>
