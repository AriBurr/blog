<div class="container">

  <h1><%= @page.title %></h1>
  <cite><%= @page.author %></cite>
  <hr>

  <blockquote><%= @page.content %></blockquote>

  <em>Created At: <%= @page.created_at %></em>
  <br>
  <em>Updated At: <%= @page.updated_at %></em>

  <br>

  <div class="action-buttons">
    <%= link_to 'All Posts', pages_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_page_path(@page), class: 'btn btn-primary' %>
    <%= link_to 'Delete', page_path(@page), method: :delete, data:{ confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>

</div>
