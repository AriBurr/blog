<div class="container">
  <h1>New Blog Post</h1>

  <%= form_for @page do |f| %>
    <div class="form-group row">
      <div class="col-xs-4">
        <%= f.label :title %>
        <%= f.text_field :title, required: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-4">
        <%= f.label :author %>
        <%= f.text_field :author, required: true, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, required: true, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

  <br>

  <%= link_to 'All Posts', pages_path, class: 'btn btn-primary' %>
</div>
